{
  // Configurações do Editor
  "editor.bracketPairColorization.enabled": true, // Cor de nos pares de colchetes
  "editor.codeActionsOnSave": [
    "source.organizeImports",
    "source.fixAll",
    "source.fixAll.eslint"
  ],
  "editor.cursorSmoothCaretAnimation": "on", // Animação suave
  "editor.definitionLinkOpensInPeek": true,
  "editor.fontFamily": "Cascadia Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 13.4,
  "editor.fontSmoothing": "antialiased", // Suavização de fonte
  "editor.fontVariations": false,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.guides.bracketPairs": true, // Guias de corchetes
  "editor.letterSpacing": 0,
  "editor.minimap.renderCharacters": false, // Renderizar caracteres no minimapa
  "editor.renderLineHighlight": "line",
  "editor.semanticHighlighting.enabled": false, // Destaque semântico (parametros)
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": true, // Caminho do arquivo exibido na janela

  // Formatadores específicos por linguagem
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  // Configuración de explorador de archivos
  "explorer.compactFolders": true, // Compactar carpetas
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "files.autoSave": "afterDelay",
  "files.associations": {
    "*.prisma": "sqlite"
  },

  // Terminal
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font",
  "terminal.integrated.fontSize": 15,

  // Workspace
  "workbench.colorTheme": "Palenight (Mild Contrast)",
  "workbench.editor.labelFormat": "short",
  "workbench.editorAssociations": {
    "*.xlsx": "default"
  },
  "workbench.iconTheme": "symbols",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 10,

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,

  // Extensiones y Integraciones
  "symbols.hidesExplorerArrows": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "database-client.autoSync": true,
  "hediet.vscode-drawio.resizeImages": null,

  // GitHub Copilot e Chat
  "github.copilot.advanced": {},
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "chat.detectParticipant.enabled": false,

  // Otras configuraciones
  "diffEditor.experimental.showEmptyDecorations": false,
  "window.zoomLevel": 1.4,
  "prettier.arrowParens": "avoid",
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.bracketSpacing": true,
  "prettier.tabWidth": 2,
  "workbench.sideBar.location": "right",
   "editor.wordWrap": "wordWrapColumn"
}
